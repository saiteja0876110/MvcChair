@model MVCChair.Models.Chair

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="mb-3"><i class="bi bi-plus-circle"></i> Add a New Chair</h1>
    <div class="card shadow-lg p-4">
        <h4 class="mb-3 text-secondary">Chair Details</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label">Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="e.g. IKEA, Herman Miller" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Type" class="form-label">Type</label>
                    <input asp-for="Type" class="form-control" placeholder="e.g. Office, Lounge, Dining" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Color" class="form-label">Color</label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Capacity" class="form-label">Weight Capacity (kg)</label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Rating" class="form-label">Rating (0-5)</label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Chair
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
