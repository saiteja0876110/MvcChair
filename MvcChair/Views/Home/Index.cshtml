@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container-fluid bg-dark text-white py-5 mb-4" style="background: linear-gradient(to right, #0f2027, #203a43, #2c5364);">
    <div class="container text-center">
        <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">Welcome to LesChair</h1>
        <p class="lead fs-4">Discover the most comfortable and stylish chairs for your needs.</p>
        <a class="btn btn-warning btn-lg mt-3 px-5 py-2 rounded-pill shadow" asp-controller="Chairs" asp-action="Index">
            <i class="bi bi-shop-window me-2"></i> Browse Chairs
        </a>
    </div>
</div>

<!-- Features Section -->
<div class="container text-center mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body">
                    <i class="bi bi-award display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Premium Quality</h5>
                    <p class="card-text">Our chairs are crafted from the finest materials for durability and comfort.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body">
                    <i class="bi bi-truck display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Fast Delivery</h5>
                    <p class="card-text">Get your chair delivered to your doorstep in no time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body">
                    <i class="bi bi-star display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Top Rated</h5>
                    <p class="card-text">Rated 4.8+ by hundreds of satisfied customers across the country.</p>
                </div>
            </div>
        </div>
    </div>
</div>
